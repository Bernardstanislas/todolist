{% extends 'LearningSymfonyTodolistBundle::index.html.twig' %}

{% block body %}
<section class="todoapp">
    {% include "LearningSymfonyTodolistBundle::new.html.twig" %}
    <!-- This section should be hidden by default and shown when there are todos -->
    <section class="main">
        <input class="toggle-all" type="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        {% include "LearningSymfonyTodolistBundle::todos.html.twig" %}
    </section>
    <!-- This footer should hidden by default and shown when there are todos -->
    <footer class="footer">
        {% include "LearningSymfonyTodolistBundle::count.html.twig" %}
        {% include "LearningSymfonyTodolistBundle::filter.html.twig" %}
        <!-- Hidden if no completed items are left ↓ -->
        <button class="clear-completed">Clear completed</button>
    </footer>
</section>
<footer class="info">
    <!-- Remove the below line ↓ -->
    <p>Template by <a href="http://sindresorhus.com">Sindre Sorhus</a></p>
    <!-- Change this out with your name and url ↓ -->
    <p>Created by <a href="http://todomvc.com">Stanislas Bernard</a></p>
    <p>Part of <a href="http://todomvc.com">TodoMVC</a></p>
</footer>
{% endblock %}
